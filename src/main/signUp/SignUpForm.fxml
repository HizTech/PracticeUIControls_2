<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.signUp.SignUpFormController">
   <children>
      <VBox fx:id="panelFormSignUp" alignment="CENTER" prefHeight="474.0" prefWidth="735.0">
         <children>
            <Label text="Formulario de Registro">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <VBox prefWidth="100.0">
               <children>
                  <Label text="Correo Electronico">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="txtEmailSignUp" minHeight="-Infinity" onKeyTyped="#keyEvent" prefHeight="30.0" promptText="Ej. Admin@gmail.com">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <Label text="Usuario">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="txtUserSignUp" minHeight="-Infinity" onKeyTyped="#keyEvent" prefHeight="30.0" promptText="Ej. Admin">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <HBox prefWidth="200.0">
                     <children>
                        <VBox prefWidth="100.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Contraseña">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </Label>
                              <PasswordField fx:id="txtPasswordSignUp" minHeight="-Infinity" onKeyTyped="#keyEvent" prefHeight="30.0" promptText="Ej. 1234">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </PasswordField>
                           </children>
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </VBox>
                        <VBox prefWidth="100.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Confirmar Contraseña">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </Label>
                              <PasswordField fx:id="txtConfirmPasswordSignUp" minHeight="-Infinity" onKeyTyped="#keyEvent" prefHeight="30.0" promptText="Ej. 1234">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </PasswordField>
                           </children>
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <Label text="Nacionalidad">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
                  <ComboBox fx:id="cbCountrySignUp" maxWidth="1.7976931348623157E308" prefHeight="30.0" style="-fx-background-color: transparent; -fx-border-color: #d3d3d3;" visibleRowCount="5">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ComboBox>
                  <HBox alignment="TOP_CENTER" prefWidth="200.0">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                     <children>
                        <Button fx:id="btnFormSignUp" mnemonicParsing="false" onAction="#actionEvent" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #111; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Registrar" textFill="WHITE">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="5.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnCleanSignUp" mnemonicParsing="false" onAction="#actionEvent" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #2a8a85; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Limpiar" textFill="WHITE">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets left="30.0" right="30.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>
